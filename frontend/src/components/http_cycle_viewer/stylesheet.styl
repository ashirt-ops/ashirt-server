@import '~src/vars'

.root
  height: 100%
  display: block
  overflow: auto
  margin: 0px 10px 10px 10px

.flex-area
  display: flex
  flex-flow: row wrap
  justify-content: flex-start
  align-items: flex-start

  & > *
    margin-right: 5px
    margin-bottom: 5px
.table-container
  flex-grow: 1
  flex-shrink: 1
  flex-basis: 49% //500px
  border: 1px solid $darker-background
  border-bottom: 0px
  box-sizing: border-box
  overflow: auto
  height: 100%

  .selected-row
    background: $darker-primary

    &:hover
      background: $lighter-primary
  
  .table
    white-space: nowrap


.entry-root
  flex-grow: 1
  flex-basis: 49%
  flex-shrink: 1

.tab-menu-group
  margin-bottom: 2px

.section-container
  padding: 5px 0px 5px 10px

.section-entry
  line-height: 1.25
  display: block
  text-align: left

.section-key
  display: inline
  font-weight: bold
  font-style: normal
  color: $lighter-primary
  white-space: nowrap

.section-value
  display: inline
  padding-left: 5px
  font-family: monospace
  font-size: small
  word-break: break-all
