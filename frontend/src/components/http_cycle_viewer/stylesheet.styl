@import '~src/vars'


.root
  position: relative
  height: 100%

.header
  margin: 10px 10px
  text-align: left

  em
    padding: 0 5px 0 5px
    font-style: italic
    font-weight: bold

.table-container
  margin: 10px
  height: 200px
  overflow: auto
  border: 1px solid $darker-background

  .selected-row
    background: $darker-primary

    &:hover
      background: $lighter-primary

  .table
    white-space: nowrap

.http-details
  margin: 10px
  position: relative

  .tab-group
    margin-left: 2px
    margin-bottom: 2px

  .section-header
    text-align: left
    padding-bottom: 5px
    flex-grow: 1



.pretty-headers-container
  overflow: auto
  max-height: 250px
  background: $darker-background
  //border: 1px solid $darker-primary
  border: 1px solid $darker-background
  text-align: left
  margin-bottom: 10px
  padding: 5px

.pretty-headers-entry
  line-height: 1.25
  margin-left: 5px

.pretty-headers-key
  font-weight: bold
  white-space: nowrap

.pretty-headers-value
  font-family: monospace
  font-size: small
  padding-left: 5px

.pretty-headers-no-content
  font-weight: bold


