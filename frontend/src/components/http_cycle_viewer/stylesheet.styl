@import '~src/vars'


.root
  position: relative
  height: 100%


.header
  margin: 10px 10px
  text-align: left

  em
    padding: 0 5px 0 5px
    font-style: italic
    font-weight: bold


.table-container
  margin: 10px
  height: 200px
  overflow: auto
  border: 1px solid $darker-background

  .selected-row
    background: $darker-primary

    &:hover
      background: $lighter-primary

  .table
    white-space: nowrap


.http-details
  margin: 10px
  position: relative

  .tab-group
    margin-left: 2px
    margin-bottom: 2px

  .section-header
    text-align: left
    padding-bottom: 5px

  .pretty-headers-container
    overflow: auto
    max-height: 250px
    background: $darker-background
    border: 1px solid $darker-background
    text-align: left
    padding: 5px

  .pretty-headers-entry
    line-height: 1.25
    margin-left: 5px

  .pretty-headers-key
    font-weight: bold
    white-space: nowrap

  .pretty-headers-value
    font-family: monospace
    font-size: small
    padding-left: 5px

  .code-viewer
    position: relative
    height: 250px

    .ace
      position: absolute
      top: 0px
      bottom: 0
      left: 0
      right: 0
      height: 100%
