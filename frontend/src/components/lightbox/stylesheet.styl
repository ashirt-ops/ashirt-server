@import '~src/vars'

.root
  position: fixed
  top: 0
  left: 0
  bottom: 0
  right: 0
  padding: 15px
  background: rgba(#000, 0.5)
  transition: all 200ms

.content
  position: absolute
  top: 50%
  left: 50%
  box-sizing: border-box
  max-height: 95%
  max-width: 95%
  transform: translate(-50%, -50%)
  transition: all 200ms
  background: $background
  overflow: auto

  &.fit
    transition: all 0ms
    background: transparent
    box-shadow: initial

.animating
  opacity: 0

.open
  opacity: 1

.fit
  img
    display: block
    width: 95vw
    height: 95vh
    object-fit: contain

.full
  img
    display: block
