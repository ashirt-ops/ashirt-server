@import '~src/vars'

.root
  min-width: 180px
  max-width: 350px
  padding: 5px
  background: $lighter-background
  border: 1px solid $darker-background
  box-shadow: 0 0 5px 0 rgba(#000, 0.3)
  border-radius: 5px
  overflow-y: auto

.menu-item
  position: relative
  display: block
  width: 100%
  padding: 7px 7px 7px 36px
  border: none
  background: transparent
  color: inherit
  border-radius: 3px
  text-align: left
  outline: none

  &.disabled
    color: $foreground-disabled

  &.clickable
    cursor: pointer

  &.clickable:hover, &.selected
    background: rgba(#fff, 0.2)

  &.selected
    background: $primary

  &.clickable:hover, &.selected
    .icon { opacity: 1 }

  &.clickable:focus
    box-shadow: 0 0 1px 2px $primary

  &.danger
    background-color: $lighter-danger

  &.danger:hover
    background-color: $danger

  &.danger:active
    background-color: $darker-danger

  * { outline: none }

.icon
  position: absolute
  height: $text-size
  width: @height
  top: ((30px - @height) / 2)
  left: ((36px - @width) / 2)
  background-size: @width @height
  opacity: 0.5

.separator
  outline: none
  border: none
  border-bottom: 1px solid rgba(#fff, 0.15)
