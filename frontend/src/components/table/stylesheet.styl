@import '~src/vars'

.root
  width: 100%

  th
    font-weight: 800
    color: rgba(#fff, 0.4)

  th, td
    padding: 10px
    text-align: left

  td
    vertical-align: middle

  tr
    border-bottom: 1px solid $darker-background

  tbody tr
    background: $background
    transition: background 100ms
    &:hover { background: $lighter-background }

  $arrow-size = 5px
  .arrow
    position: relative
    &.asc:after
      content: ""
      position: absolute
      top: 12px - $arrow-size
      left: 12px - $arrow-size
      border: $arrow-size solid transparent
      border-top-color: $foreground

    &.desc:after
      content: ""
      position: absolute
      top: 6px - $arrow-size
      left: 12px - $arrow-size
      border: $arrow-size solid transparent
      border-bottom-color: $foreground
