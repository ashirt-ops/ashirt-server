@import '~src/vars'

.root
  display: flex
  background:none;
  border:none;
  padding:0px
  margin:0px
  cursor: pointer
  color: #f5f8fa

  > *
    position: relative
    padding: 5px 7px 5px 25px
    height: 15px
    line-height: 16px
    font-size: $smallest-text-size
    font-weight: 800
    background: $background
    border-radius: 3px
    box-shadow: inset 0 0 0 1px $darker-background

.icon
  margin-left: 5px
  background-size: 11px
  background-position: 9px center
  background-repeat: no-repeat

  &.users
    background-image: url('./user.svg')
    background-size: 8px

