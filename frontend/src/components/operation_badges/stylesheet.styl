@import '~src/vars'

.root
  display: flex

  > *
    position: relative
    padding: 5px 7px 5px 25px
    height: 15px
    line-height: 16px
    font-size: $smallest-text-size
    font-weight: 800
    background: $background
    border-radius: 3px
    box-shadow: inset 0 0 0 1px $darker-background
    cursor: default

.status
  padding: 5px 7px 5px 15px

.status:before
  content: ""
  position: absolute
  left: 7px
  top: 9px
  width: 8px
  height: @width
  border-radius: @width

for $id, $color in $operation-status-colors
  .status-{$id}:before { background: $color }

.num-users
  margin-left: 5px
  background-image: url(./user.svg)
  background-size: 8px
  background-position: 9px center
  background-repeat: no-repeat

.num-tags
  margin-left: 5px
  background-image: url(./tag.svg)
  background-size: 11px
  background-position: 9px center
  background-repeat: no-repeat

.num-evidence
  margin-left: 5px
  background-image: url(./magnifyingGlass.svg)
  background-size: 11px
  background-position: 9px center
  background-repeat: no-repeat
