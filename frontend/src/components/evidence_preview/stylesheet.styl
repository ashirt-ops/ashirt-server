@import '~src/vars'


.root.codeblock > div
  height: 100%

.root.image
  &.fit
    display: inline

  &.fit img
    border: 1px solid $darker-background
    border-bottom-color: $lighter-background
    box-shadow: inset 0 1px 3px 1px rgba(#000, 0.5)
    border-radius: 5px
    max-width: 100%
    max-height: 100%

.root.codeblock, .root.c2-event, .root.terminal-recording, .root.http-request-cycle
  &.fit
    width: 100%
    height: 100%

  &.full
    width: 90vw
    height: 90vh

.root.event
    background-image: url('./event.svg')
    background-repeat: no-repeat
    background-position: center
    background-size: contain
    min-width: 90%
    min-height: 90%

  &.full
    background: transparent
    width: 90vw
    height: 90vh

.clickable *
  cursor: pointer
