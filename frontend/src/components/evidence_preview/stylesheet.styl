@import '~src/vars'

.root.image
  &.fit
    display: inline

  &.fit img
    border: 1px solid $darker-background
    border-bottom-color: $lighter-background
    box-shadow: inset 0 1px 3px 1px rgba(#000, 0.5)
    border-radius: 5px
    max-width: 100%
    max-height: 100%

.root.codeblock, .root.terminal-recording, .root.http-request-cycle
  &.fit
    width: 100%
    height: 100%

  &.full
    width: 90vw
    height: 90vh

.clickable *
  cursor: pointer

.overlay
  position: relative

.overlay-button
  position: absolute
  right: 1px
  bottom: 1px
  opacity: .5
  transition: 200ms
  
  &:hover
    opacity: 1
    transition: 200ms
