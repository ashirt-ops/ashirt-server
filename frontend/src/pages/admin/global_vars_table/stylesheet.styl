@import '~src/vars'

.table-row
  .scheme-list
    display: inline
    padding-right: 10px

  .checkbox
    display: initial

  .column-button
    float: right

.user-table-pager
  display: inline
  float: right
  margin-top: 5px

.deleted-user
  font-style: italic

.arrow
  width: 82px
  $arrow-size = 5px
  &:after
    content: ""
    position: absolute
    top: 14px - $arrow-size
    left: 60px
    border: $arrow-size solid transparent
    border-top-color: $foreground
    margin-right: 50px

.button-text
  padding-right: 15px
  
.user
  padding: 5px

.popover
  display: flex

.inline-form
  display: flex
  align-items: center

  & > *
    margin-right: 20px
    align-self flex-end
