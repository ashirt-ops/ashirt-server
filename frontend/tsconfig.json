{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2017",
    "lib": [
      "dom",
      "esnext"
    ],
    "moduleResolution": "node",
    "module": "ES2020",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "baseUrl": "./",
    "paths": {
      "~*": ["./*"]
    },
    "typeRoots": ["node_modules/@types"],
    "allowSyntheticDefaultImports": true,
  },
  "include": ["src/**/*"]
}
